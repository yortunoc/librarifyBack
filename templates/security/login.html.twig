{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block menu %} {% endblock menu %}

{% block body %}

    <section class="vh-100" style="background-color: #c4e3f3;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp" width="413" height="620"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                            </div>
                                        {% endif %}

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicio de Sesion</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" name="email" id="inputEmail" class="form-control form-control-lg" required autofocus/>
                                            <label class="form-label" for="form2Example17">Correo electronico</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required/>
                                            <label class="form-label" for="form2Example27">Contrase√±a</label>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}">

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Ingresar</button>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <a href="{{ path('registration') }}" class="btn btn-lg btn-block" type="button">Si no tienes cuenta registrate</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
